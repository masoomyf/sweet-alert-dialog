<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
            android:layout_height="match_parent"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/logo_img"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/logo_big" />


        <Button
            android:id="@+id/progress_dialog"
            style="@style/dialog_blue_button"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:text="@string/show_loading_progress" />


        <Button
            android:id="@+id/basic_test"
            style="@style/dialog_blue_button"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:text="@string/simple_dialog" />


        <Button
            android:id="@+id/under_text_test"
            style="@style/dialog_blue_button"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:text="@string/dialog_with_subtext" />


        <Button
            android:id="@+id/error_text_test"
            style="@style/dialog_blue_button"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:text="@string/error_dialog" />


        <Button
            android:id="@+id/success_text_test"
            style="@style/dialog_blue_button"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:text="@string/success_dialog" />


        <Button
            android:id="@+id/warning_confirm_test"
            style="@style/dialog_blue_button"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:text="@string/warning_dialog_with_success_listener" />


        <Button
            android:id="@+id/warning_cancel_test"
            style="@style/dialog_blue_button"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:text="@string/full_feature_warning_dialog" />


        <Button
            android:id="@+id/custom_img_test"
            style="@style/dialog_blue_button"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:text="@string/dialog_with_custom_icon" />

    </LinearLayout>
</ScrollView>

